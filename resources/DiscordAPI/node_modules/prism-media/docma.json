{
  "src": [
    "./src/**/*.js",
    "./README.md"
  ],
  "jsdoc": {
    "hierarchy": "true",
    "plugins": [
      "plugins/markdown"
    ]
  },
  "app": {
    "title": "Prism Documentation",
    "routing": "query",
    "entrance": "content:readme",
    "base": "/prism-media"
  },
  "markdown": {
    "sanitize": false
  },
  "template": {
    "options": {
      "title": {
        "label": "Prism",
        "href": "."
      },
      "navItems": [
        {
          "label": "Readme",
          "href": "."
        },
        {
          "label": "Documentation",
          "href": "?api"
        },
        {
          "label": "GitHub",
          "href": "https://github.com/amishshah/prism-media"
        }
      ]
    }
  },
  "dest": "docs"
}